{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/cron/auto-publish.js",
      "use": "@vercel/node"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.toolixy.vercel.app"
        }
      ],
      "destination": "https://toolixy.vercel.app/$1",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/auto-publish",
      "schedule": "0 9 * * *"
    }
  ]
}
